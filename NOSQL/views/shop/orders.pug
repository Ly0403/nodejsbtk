extends ../layouts/main.pug

block contents
  if orders.length > 0
    each order in orders
        table.table.table-bordered.mx-4.my-4.pr-4
            thead 
                tr
                th Image
                th Name
                th Description
                th Quantity 
            tbody
                each product in order.products
                    tr
                        td
                            img(src=`/img/${product.image}` width="80px" height="100px") 
                        td #{product.name} 
                        td #{product.description}
                        td #{product.quantity}

  else 
    h1 No Product

