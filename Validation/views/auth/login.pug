extends ../layouts/main

block contents
    .container 
      .row
        .col-2 
        .col-8.mx-3.my-4
          if result === 'success'
            p.alert.alert-success The log success!
          if result === 'existedUser'
            p.alert.alert-danger The user is already registered!
          if result === 'noUser'
            p.alert.alert-danger The user is not registered or password is wrong!
          form(action="/auth/login" method="POST")
            input(type="hidden" name="_csrf" value=`${csrfToken}`)
            .form-group.row.mb-3
              label.col-sm-2.col-form-label(for="email") Email
              .col-sm-10
                input#emailLogin.form-control(type="text" name="email")
            .form-group.row.mb-3
              label.col-sm-2.col-form-label(for="password") Password
              .col-sm-10
                input#passwordLogin.form-control(type="password" name="password")
            .form-group.row.mb-3.offset-sm-2
                input.btn.btn-outline-danger(type="submit" value="Login")
                a.btn.btn-outline-success.my-2(href="/auth/reset") Reset
                a.btn.btn-outline-success.my-2(href="/auth/register") Register